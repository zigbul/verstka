{
  "name": "npm-starter-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "watch:css": "node-sass --watch src/scss -o dist/css ",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html'",
    "start": "run-p serve watch:css",
    "autoprefixer": "postcss dist/css/*.css --use autoprefixer --map=false -b 'last 2 versions' -d dist/css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2"
  }
}
